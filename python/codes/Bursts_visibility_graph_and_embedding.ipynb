"source": [
"# Notebook: Spike detection, burst classification, visibility graphs and embeddings\n",
"# Content: load ABF(s), detect spikes, group bursts, classify bursts, build visibility graphs,\n",
"# compute embeddings (TruncatedSVD), compute segment metrics and visualize with UMAP/plots.\n",
"\n",
"# --- Libraries ---\n",
"import os\n",
"import pyabf\n",
"import numpy as np\n",
"import pandas as pd\n",
"import matplotlib.pyplot as plt\n",
"from scipy.signal import find_peaks, hilbert\n",
"from scipy.stats import skew, kurtosis\n",
"from numpy.linalg import lstsq\n",
"from sklearn.metrics import r2_score\n",
"import networkx as nx\n",
"from sklearn.decomposition import TruncatedSVD\n",
"import umap\n",
"from sklearn.preprocessing import StandardScaler\n",
"import seaborn as sns\n",
"import plotly.express as px\n",
"import plotly.io as pio\n",
"pio.renderers.default = "browser"\n",
"%matplotlib widget\n",
"\n",
"# --- General parameters ---\n",
"folder_path = "bursting" # Folder containing ABF files\n",
"example_file = "bursting/cell89basal.abf" # example single file if you want\n",
"threshold = -35 # threshold for spike detection (mV)\n",
"burst_threshold = 0.3 # max ISI to consider spikes part of same burst (s)\n",
"default_fs = 10000 # default sampling frequency (Hz) if not provided by ABF\n",
"dt = 1.0 / default_fs\n",
"\n",
"# Additional criteria\n",
"min_spikes_in_burst = 4 # minimum spikes to define a burst\n",
"max_isi = 0.3 # max ISI allowed inside burst (s)\n",
"min_spike_rate = 5 # optional minimum spike rate (Hz)\n",
"\n",
"# Collections for export\n",
"all_segment_metrics = []\n",
"global_nodes_list = []\n",
"global_edges_list = []\n",
"\n",
"# --- Helper functions ---\n",
"def detect_spikes(signal, data_rate, threshold_local=None):\n",
" """Detect positive peaks above threshold_local. Returns indices, times (s), and properties."""\n",
" thr = threshold_local if threshold_local is not None else threshold\n",
" peaks, props = find_peaks(signal, height=thr)\n",
" times = peaks / data_rate\n",
" return peaks, times, props\n",
"\n",
"def detect_bursts_from_spike_times(spike_times, burst_isi_thresh=burst_threshold, min_spikes=min_spikes_in_burst):\n",
" """Group spike_times into bursts using an ISI threshold. Returns list of (start, end) in seconds and list of lists of spike indices."""\n",
" bursts = []\n",
" bursts_idx = []\n",
" if len(spike_times) < min_spikes:\n",
" return bursts, bursts_idx\n",
" isi = np.diff(spike_times)\n",
" current_indices = [0]\n",
" for i in range(1, len(spike_times)):\n",
" if isi[i-1] < burst_isi_thresh:\n",
" current_indices.append(i)\n",
" else:\n",
" if len(current_indices) >= min_spikes:\n",
" bursts_idx.append(current_indices.copy())\n",
" bursts.append((spike_times[current_indices[0]], spike_times[current_indices[-1]]))\n",
" current_indices = [i]\n",
" if len(current_indices) >= min_spikes:\n",
" bursts_idx.append(current_indices.copy())\n",
" bursts.append((spike_times[current_indices[0]], spike_times[current_indices[-1]]))\n",
" return bursts, bursts_idx\n",
"\n",
"def classify_burst_segment(voltage, time, seg_start, seg_end, seg_index, segments):\n",
" """Classify a burst segment as Square Wave, Parabolic or Other using baseline comparison and simple parabola fit & symmetry."""\n",
" seg_mask = (time >= seg_start) & (time <= seg_end)\n",
" seg_voltage = voltage[seg_mask]\n",
" if seg_voltage.size == 0:\n",
" return "Other"\n",
" # baseline before and after (if available)\n",
" prev_mean = np.nan\n",
" next_mean = np.nan\n",
" if seg_index > 0:\n",
" prev_end = segments[seg_index-1][1]\n",
" inter_mask_prev = (time > prev_end) & (time < seg_start)\n",
" if np.any(inter_mask_prev):\n",
" prev_mean = np.mean(voltage[inter_mask_prev])\n",
" if seg_index < len(segments)-1:\n",
" next_start = segments[seg_index+1][0]\n",
" inter_mask_next = (time > seg_end) & (time < next_start)\n",
" if np.any(inter_mask_next):\n",
" next_mean = np.mean(voltage[inter_mask_next])\n",
" inter_mean = np.nanmean([prev_mean, next_mean])\n",
"\n",
" burst_min = np.min(seg_voltage)\n",
" # simple parabolic fit for shape quantification\n",
" t = np.linspace(-0.5, 0.5, len(seg_voltage))\n",
" X = np.vstack([t**2, t, np.ones_like(t)]).T\n",
" try:\n",
" coef, *_ = lstsq(X, seg_voltage, rcond=None)\n",
" y_hat = X @ coef\n",
" r2_parabola = r2_score(seg_voltage, y_hat) if len(seg_voltage) >= 3 else 0\n",
" except Exception:\n",
" r2_parabola = 0\n",
"\n",
" # symmetry using Hilbert envelope\n",
" try:\n",
" analytic_signal = hilbert(seg_voltage)\n",
" envelope = np.abs(analytic_signal)\n",
" half = len(envelope) // 2\n",
" symmetry = (np.corrcoef(envelope[:half], envelope[-half:][::-1])[0, 1]\n",
" if half >= 2 else np.nan)\n",
" except Exception:\n",
" symmetry = np.nan\n",
"\n",
" # classification rules\n",
" if np.isnan(inter_mean):\n",
" return "Other"\n",
" elif burst_min > inter_mean:\n",
" return "Square Wave"\n",
" elif burst_min < inter_mean:\n",
" return "Parabolic"\n",
" else:\n",
" return "Other"\n",
"\n",
"def build_visibility_graph(isi_ms):\n",
" """Build a horizontal visibility graph from a 1D series (isi in ms). Returns networkx Graph."""\n",
" n = len(isi_ms)\n",
" G = nx.Graph()\n",
" G.add_nodes_from(range(n))\n",
" for a in range(n):\n",
" for b in range(a+1, n):\n",
" visible = True\n",
" for c in range(a+1, b):\n",
" # linear interpolation value at c between a and b\n",
" y_line = isi_ms[b] + (isi_ms[a] - isi_ms[b]) * (b - c) / (b - a)\n",
" if isi_ms[c] >= y_line:\n",
" visible = False\n",
" break\n",
" if visible:\n",
" G.add_edge(a, b)\n",
" return G\n",
"\n",
"# --- Main processing: iterate ABF files and sweeps ---\n",
"abf_files = [f for f in os.listdir(folder_path) if f.lower().endswith('.abf')]\n",
"if len(abf_files) == 0 and os.path.exists(example_file):\n",
" abf_files = [os.path.basename(example_file)]\n",
"\n",
"for file_name in abf_files:\n",
" file_path = os.path.join(folder_path, file_name)\n",
" try:\n",
" abf = pyabf.ABF(file_path)\n",
" except Exception as e:\n",
" print(f"Could not load {file_path}: {e}")\n",
" continue\n",
"\n",
" data_rate = getattr(abf, 'dataRate', default_fs)\n",
" for sweep in range(abf.sweepCount):\n",
" abf.setSweep(sweep)\n",
" time = np.array(abf.sweepX)\n",
" voltage = np.array(abf.sweepY)\n",
" if data_rate is None or data_rate <= 0:\n",
" data_rate = default_fs\n",
" dt = 1.0 / data_rate\n",
"\n",
" # Spike detection\n",
" peaks, spike_times, props = detect_spikes(voltage, data_rate)\n",
"\n",
" # Burst detection from spike times\n",
" bursts, bursts_idx = detect_bursts_from_spike_times(spike_times, burst_isi_thresh=burst_threshold, min_spikes=min_spikes_in_burst)\n",
"\n",
" # Build segments list (bursts and non-bursts)\n",
" segments = []\n",
" for start, end in bursts:\n",
" segments.append((start, end, 'Burst'))\n",
" if bursts:\n",
" # insert leading non-burst\n",
" if bursts[0][0] > time[0]:\n",
" segments.insert(0, (time[0], bursts[0][0], 'Non-burst'))\n",
" # between bursts\n",
" for i in range(len(bursts)-1):\n",
" segments.append((bursts[i][1], bursts[i+1][0], 'Non-burst'))\n",
" # trailing non-burst\n",
" if bursts[-1][1] < time[-1]:\n",
" segments.append((bursts[-1][1], time[-1], 'Non-burst'))\n",
" else:\n",
" segments.append((time[0], time[-1], 'Non-burst'))\n",
"\n",
" # Classify bursts and compute metrics per segment\n",
" burst_types = []\n",
" for i, (seg_start, seg_end, seg_type) in enumerate(segments):\n",
" if seg_type == 'Burst':\n",
" btype = classify_burst_segment(voltage, time, seg_start, seg_end, i, segments)\n",
" else:\n",
" btype = 'Non-burst'\n",
" burst_types.append(btype)\n",
"\n",
" # Collect metrics per segment\n",
" for j, (seg_start, seg_end, seg_type) in enumerate(segments):\n",
" seg_mask = (time >= seg_start) & (time <= seg_end)\n",
" seg_voltage = voltage[seg_mask]\n",
" duration = seg_end - seg_start\n",
" btype = burst_types[j]\n",
"\n",
" seg_peaks, _ = find_peaks(seg_voltage, height=threshold)\n",
" num_peaks = len(seg_peaks)\n",
" mean_isi = np.mean(np.diff(seg_peaks / data_rate)) if num_peaks >= 2 else 0\n",
"\n",
" if seg_voltage.size < 2:\n",
" mean_val = std_val = min_val = max_val = skew_val = kurt_val = area_val = 0\n",
" else:\n",
" mean_val = np.mean(seg_voltage)\n",
" std_val = np.std(seg_voltage)\n",
" min_val = np.min(seg_voltage)\n",
" max_val = np.max(seg_voltage)\n",
" skew_val = skew(seg_voltage)\n",
" kurt_val = kurtosis(seg_voltage)\n",
" area_val = np.trapz(seg_voltage, dx=dt)\n",
"\n",
" if seg_voltage.size < 2:\n",
" mean_d = std_d = min_d = max_d = skew_d = kurt_d = 0\n",
" else:\n",
" deriv = np.diff(seg_voltage) / dt\n",
" mean_d = np.mean(deriv)\n",
" std_d = np.std(deriv)\n",
" min_d = np.min(deriv)\n",
" max_d = np.max(deriv)\n",
" skew_d = skew(deriv) if deriv.size>0 else 0\n",
" kurt_d = kurtosis(deriv) if deriv.size>0 else 0\n",
"\n",
" all_segment_metrics.append([\n",
" file_name, sweep, seg_type, btype, duration,\n",
" num_peaks, mean_isi,\n",
" mean_val, std_val, min_val, max_val, skew_val, kurt_val, area_val,\n",
" mean_d, std_d, min_d, max_d, skew_d, kurt_d\n",
" ])\n",
" \n",
" # For each detected burst, build visibility graph and compute embeddings\n",
" for b_idx, b_indices in enumerate(bursts_idx):\n",
" # global spike indices for this burst\n",
" global_idxs = [int(i) for i in b_indices]\n",
" # isi per spike in ms (internal ISI within burst)\n",
" isi_ms = []\n",
" for k, spike_local_idx in enumerate(global_idxs):\n",
" if k == 0:\n",
" isi_ms.append(0.0)\n",
" else:\n",
" t0 = spike_times[global_idxs[k-1]]\n",
" t1 = spike_times[global_idxs[k]]\n",
" isi_ms.append((t1 - t0) * 1000.0)\n",
" isi_ms = np.array(isi_ms)\n",
"\n",
" # Build visibility graph\n",
" G = build_visibility_graph(isi_ms)\n",
"\n",
" # Save edges for global export (use burst numbering starting at 1)\n",
" for u, v in G.edges():\n",
" global_edges_list.append([file_name, sweep, b_idx+1, u, v])\n",
"\n",
" # Embeddings via adjacency\n",
" A = nx.to_numpy_array(G)\n",
" n_dim = min(3, A.shape[0])\n",
" if A.shape[0] >= 2:\n",
" try:\n",
" emb2 = TruncatedSVD(n_components=2, random_state=42).fit_transform(A)\n",
" except Exception:\n",
" emb2 = np.zeros((A.shape[0], 2))\n",
" if n_dim >= 3:\n",
" try:\n",
" emb3 = TruncatedSVD(n_components=n_dim, random_state=42).fit_transform(A)\n",
" # ensure shape (n,3)\n",
" if emb3.shape[1] < 3:\n",
" emb3 = np.hstack([emb3, np.zeros((emb3.shape[0], 3-emb3.shape[1]))])\n",
" except Exception:\n",
" emb3 = np.zeros((A.shape[0], 3))\n",
" else:\n",
" emb3 = np.zeros((A.shape[0], 3))\n",
" else:\n",
" emb2 = np.zeros((A.shape[0], 2))\n",
" emb3 = np.zeros((A.shape[0], 3))\n",
"\n",
" # save nodes\n",
" burst_type_label = classify_burst_segment(voltage, time, bursts[b_idx][0], bursts[b_idx][1], 0, [(0,0,'')]) if len(bursts)>0 else 'Other'\n",
" for node_i in range(len(isi_ms)):\n",
" global_nodes_list.append([\n",
" file_name, sweep, b_idx+1, burst_type_label, node_i,\n",
" float(emb2[node_i,0]) if emb2.size else 0.0,\n",
" float(emb2[node_i,1]) if emb2.size else 0.0,\n",
" float(emb3[node_i,0]) if emb3.size else 0.0,\n",
" float(emb3[node_i,1]) if emb3.size else 0.0,\n",
" float(emb3[node_i,2]) if emb3.size else 0.0,\n",
" int(global_idxs[node_i])\n",
" ])\n",
"\n",
"# --- Save CSV exports ---\n",
"df_segments = pd.DataFrame(all_segment_metrics, columns=[\n",
" 'File_Name', 'Sweep', 'Segment_Type', 'Burst_Type', 'Duration',\n",
" 'Num_Peaks', 'Mean_ISI',\n",
" 'Mean', 'Std', 'Min', 'Max', 'Skewness', 'Kurtosis', 'Area',\n",
" 'Mean_Deriv', 'Std_Deriv', 'Min_Deriv', 'Max_Deriv', 'Skewness_Deriv', 'Kurtosis_Deriv'\n",
"])\n",
"out_seg_csv = 'segment_voltage_metrics_with_ISI_and_peaks.csv'\n",
"df_segments.to_csv(out_seg_csv, index=False)\n",
"print(f'Saved segment metrics to {out_seg_csv} (rows: {len(df_segments)})')\n",
"\n",
"df_nodes = pd.DataFrame(global_nodes_list, columns=[\n",
" 'File_Name', 'Sweep', 'Burst_Number', 'Burst_Type', 'Node_ID',\n",
" 'X_2D','Y_2D','X_3D','Y_3D','Z_3D','Spike_Global_Index'\n",
"])\n",
"df_edges = pd.DataFrame(global_edges_list, columns=['File_Name','Sweep','Burst_Number','Node1','Node2'])\n",
"df_nodes.to_csv('burst_nodes_all.csv', index=False)\n",
"df_edges.to_csv('burst_edges_all.csv', index=False)\n",
"print(f'Saved nodes ({len(df_nodes)}) and edges ({len(df_edges)})')\n",
"\n",
"# --- Visualization: UMAP and distributions ---\n",
"try:\n",
" sns.set(style='white', context='notebook', rc={'figure.figsize':(14,10)})\n",
" df = pd.read_csv(out_seg_csv)\n",
" if df.shape[0] > 0:\n",
" header = list(df)[4:]\n",
" X = np.array(df[header].fillna(0))\n",
" y = np.array(df.Burst_Type)\n",
" scaler = StandardScaler()\n",
" X_scaled = scaler.fit_transform(X)\n",
" reducer = umap.UMAP(n_components=2, random_state=42)\n",
" embedding = reducer.fit_transform(X_scaled)\n",
" df_umap = pd.DataFrame(embedding, columns=['UMAP1','UMAP2'])\n",
" df_umap['Burst_Type'] = y\n",
"\n",
" plt.figure()\n",
" sns.scatterplot(data=df_umap, x='UMAP1', y='UMAP2', hue='Burst_Type', palette='tab10', alpha=0.7)\n",
" plt.title('UMAP of segment metrics')\n",
" plt.show()\n",
"\n",
" plt.figure()\n",
" sns.histplot(data=df, x='Duration', hue='Burst_Type', bins=30, kde=True, palette='tab10', alpha=0.6)\n",
" plt.title('Distribution of segment durations')\n",
" plt.xlabel('Duration (s)')\n",
" plt.show()\n",
"\n",
" fig = px.scatter(df_umap, x='UMAP1', y='UMAP2', color='Burst_Type', title='UMAP')\n",
" fig.show()\n",
" else:\n",
" print('No segment rows to visualize')\n",
"except Exception as e:\n",
" print('Visualization skipped due to error:', e)\n",
"\n",
"print('Notebook processing finished.')\n"
]
}
